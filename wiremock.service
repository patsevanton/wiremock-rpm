[Unit]
Description=RPM for tool for mocking HTTP services
After=network.target

[Service]
Type=simple
User=wiremock
Group=wiremock
StartLimitBurst=5
StartLimitInterval=0
Restart=on-failure
RestartSec=1
#EnvironmentFile=-/etc/default/wiremock.conf
ExecStart=java -jar /usr/lib/wiremock/wiremock.jar
ExecStop=/bin/kill -s SIGTERM $MAINPID
ExecReload=/bin/kill -HUP $MAINPID
#LimitNOFILE=1048576
#LimitNPROC=1048576
LimitCORE=infinity

[Install]
WantedBy=multi-user.target
